<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <header>
      <% include partials/header %>
    </header>
    <section id="login">
      <div class="container inner">
        <br>
          <h2 class="text-center">- Please Sign In -</h2>
      
          <!-- show any messages that come back with authentication -->
          <% if (messages.length > 0) { %>
            <% messages.forEach(function(message) {%>
              <div class="alert alert-danger">
                <%= message %>
              </div>
            <% }); %>
          <% } %>
            <div class='container login'>

                    <form action="/auth/login" method="post" class="form login">
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="email" id="email" name="email" placeholder="Email" class="i-box form-control input-lg" placeholder="Username"/>
                          </div>
                          <div class="form-group">
                            <label for="">Password</label>
                            <input type="password" id="password" name="password" class="form-control input-lg" placeholder="Password"/>
                          </div>
                          <button class="btn btn-info btn-lg btn-block" type="submit" >Sign In</button>
                    </form>
                    <br>
                    <p class="text-center">Not a member? <a href="signup">Sign up now</a></p>
                    <hr>
                    <div class="container text-center">
                    <h4>- Sign in with social media accounts -</h4>
                    <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google+</a>
                    <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
                  </div>
            </div>
        

      </div>
    </section>
    <footer>
      <% include partials/footer %>
    </footer>
    <% include partials/scripts %>
   </body>
</html>